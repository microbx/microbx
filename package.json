{
    "private": true,
    "license": "MIT",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "test": "lerna run test",
        "prepare": "lerna run prepare",
        "clean": "rm -rf packages/**/dist",
        "precommit": "pretty-quick --staged",
        "tslint-check": "tslint-config-prettier-check ./tslint.json"
    },
    "lint-staged": {
        "*.ts": [
            "prettier --parser typescript --write",
            "git add"
        ]
    },
    "prettier": {
        "semi": false,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "printWidth": 80,
        "bracketSpacing": true,
        "useTabs": false
    },
    "devDependencies": {
        "@types/jest": "^23.3.0",
        "@types/node": "^10.5.2",
        "commitizen": "^2.10.1",
        "commitlint": "^7.0.0",
        "git-cz": "^1.7.1",
        "husky": "^0.14.3",
        "jest": "^23.4.1",
        "lerna": "^2.11.0",
        "lint-staged": "^7.2.0",
        "prettier": "^1.13.7",
        "pretty-quick": "^1.6.0",
        "semantic-release": "^15.8.1",
        "ts-jest": "^23.0.1",
        "ts-node": "^7.0.0",
        "tslint": "^5.11.0",
        "tslint-config-prettier": "^1.14.0",
        "typescript": "^2.9.2"
    }
}
